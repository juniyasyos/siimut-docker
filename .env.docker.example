DB_DRIVER=pgsql  # pgsql | mysql

# PostgreSQL (aktif jika DB_DRIVER=pgsql)
# Catatan: variabel ini dipakai untuk container database.
# run.sh akan mengisi .env aplikasi (DB_*) dari nilai ini.
POSTGRES_DB=siimut
POSTGRES_USER=siimut
POSTGRES_PASSWORD=siimut

# MySQL (aktif jika DB_DRIVER=mysql)
# Catatan: variabel ini dipakai untuk container database.
# run.sh akan mengisi .env aplikasi (DB_*) dari nilai ini.
MYSQL_DATABASE=siimut
MYSQL_USER=siimut
MYSQL_PASSWORD=siimut
MYSQL_ROOT_PASSWORD=root

# Mirror values used by Laravel inside the app container
# Jika dikosongkan, run.sh akan mengambil dari blok POSTGRES_* / MYSQL_*
# dan menuliskannya ke file .env aplikasi.
DB_DATABASE=siimut
DB_USERNAME=siimut
DB_PASSWORD=siimut

